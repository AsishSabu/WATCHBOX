<div class="container">
  <table id="adminsTable" class="table table-bordered">
    <thead>
      <tr>
        <th>S.No</th>
        <th>Order ID</th>
        <th>Shipping Details</th>
        <th>Payment</th>
        <th>Date</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (orders&&orders.length) { %> <% orders.forEach((order,index)=>{%>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= order.orderId %></td>
        <td>
          <p><%= order.shippingAddress.name %>,</p>
          <p><%= order.shippingAddress.address %></p>
        </td>
         <td><%=order.payment_method%></td>
        <td>
          <%= new Date(order.orderedDate).toLocaleDateString('en-US', { year:
          'numeric', month: 'long', day: 'numeric' }) %>
        </td>
        <td><%= order.totalPrice.toFixed(2) %></td>
        <td>
          <div class="btn-group" role="group" aria-label="Product Actions">
            <a
              href="/admin/orders/<%= order.orderId %>"
              class="btn btn-primary btn-sm"
              style="margin-right: 10px"
            >
              Details
            </a>
          </div>
        </td>
      </tr>
      <% }) %> <% } else { %>
      <tr>
        <td colspan="7">
          <h2>NO Orders yet</h2>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

<style>
  .container {
    padding: 100px;
  }
</style>
