<form id="form" action="/register" method="post">
  <div class="d-flex justify-content-center  mb-3 pb-1">
  
    <span class="h1 fw-bold mb-0 ">SIGNUP</span>
  </div>
  <%-include('../partials/flashMessage.ejs')  %>
  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px">
 Register your account
  </h5>
  <label>
    <p class="label-txt">ENTER YOUR NAME</p>
    <input type="text" id="name" name="name"  class="input">
    <div class="line-box">
      <div class="text-danger" id="nameerr" ></div>
    </div>
  </label>
  <label>
    <p class="label-txt">ENTER YOUR EMAIL</p>
    <input type="text" id="email" name="email" class="input">
    <div class="line-box">
      <div class=" text-danger" id="emailerr"></div>
    </div>
  </label>
  <label>
    <p class="label-txt">ENTER YOUR PASSWORD</p>
    <input type="password" id="password" name="password"  class="input">
    <div class="line-box">
      <div class=" text-danger" id="passworderr"></div>
    </div>
  </label>
  <label>
    <p class="label-txt">CONFIRM PASSWORD</p>
    <input type="password"id="cpassword" name="cpassword"  class="input">
    <div class="line-box">
      <div class="text-danger" id="cpassworderr" ></div>
    </div>
  </label>
   <label>
    <p class="label-txt">REFERAL CODE</p>
    <input type="text" name="referalCode" class="input">
    <div class="line-box">
      <div class="text-danger"></div>
    </div>
  </label>
  <button id="button" type="submit">Sign up</button>

  <div class="text-danger" id="formerr" ></div>

</form>


<style>

body {
  background: #080808;
}
form {
  width: 60%;
  margin: 200px auto;
  background: #efefef;
  padding: 60px 90px 80px 90px;
  text-align: center;
  -webkit-box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
  box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
}
label {
  display: block;
  position: relative;
  margin: 40px 0px;
}
.label-txt {
  position: absolute;
  top: -1.6em;
  padding: 10px;
  font-family: sans-serif;
  font-size: .8em;
  letter-spacing: 1px;
  color: rgb(120,120,120);
  transition: ease .3s;
}
.input {
  width: 100%;
  padding: 10px;
  background: transparent;
  border: none;
  outline: none;
}

.line-box {
  position: relative;
  width: 100%;
  height: 2px;
  background: #BCBCBC;
}

.line {
  position: absolute;
  width: 0%;
  height: 2px;
  top: 0px;
  left: 50%;
  transform: translateX(-50%);
  background: #040404;
  transition: ease .6s;
}

.input:focus + .line-box .line {
  width: 100%;
}

.label-active {
  top: -3em;
}

button {
  display: inline-block;
  padding: 12px 24px;
  background: rgb(220,220,220);
  font-weight: bold;
  color: rgb(120,120,120);
  border: none;
  outline: none;
  border-radius: 3px;
  cursor: pointer;
  transition: ease .3s;
}

button:hover {
  background: #000000;
  color: #ffffff;
}
</style>
<script src="/assets/js/registerValidation.js" ></script>
<script>
    
    $(document).ready(function(){

$('.input').focus(function(){
  $(this).parent().find(".label-txt").addClass('label-active');
});

$(".input").focusout(function(){
  if ($(this).val() == '') {
    $(this).parent().find(".label-txt").removeClass('label-active');
  };
});

});
</script>
