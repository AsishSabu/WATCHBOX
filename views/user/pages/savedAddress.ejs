    <div class="breadcrumb-content text-center pt-1">
      <ul>
        <li>
          <h3><a href="/">Home</a></h3>
        </li>
        <li>
          <h3 style="color: white">/</h3>
        </li>
        <li>
          <h3 style="color: white">Cart</h3>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="container pt-5">
  <div class="row">

    <div class="col-md-12">
      <div class="osahan-account-page-right shadow-sm bg-white p-4 h-100">
        <div class="tab-content" id="myTabContent">
          <div
            class="tab-pane fade active show"
            id="addresses"
            role="tabpanel"
            aria-labelledby="addresses-tab"
          >
            <!-- <h4 class="font-weight-bold mt-0 mb-4">Manage Addresses</h4> -->
            <div style="display: flex; justify-content: space-between">
              <h2 style="margin-bottom: 20px">Address List</h2>
              <a class="list-btn-style" href="/addAddress">Add Address</a>
            </div>
            <% if(address.length>0){ %> <% address.forEach((element,index)=>{ %>

            <div class="row">
              <div class="col-md-12">
                <div
                  class="bg-white card addresses-item mb-4 border border-primary shadow"
                >
                  <div class="gold-members p-4">
                    <div class="media">
                      <div class="media-body">
                        <h4 class="mb-1 text-secondary">
                          Address <%= index + 1 %>
                        </h4>

                        <p class="card-text text-black"><%= element.name %></p>
                        <p class="card-text text-black">
                          <%= element.address %>
                        </p>
                        <p class="card-text text-black"><%= element.town %></p>
                        <p class="card-text text-black"><%= element.state %></p>
                        <p class="card-text text-black">
                          <%= element.postcode %>
                        </p>
                        <p class="card-text text-black">
                          <%= element.mobile %>
                        </p>
                        <p class="mb-0 text-black font-weight-bold">
                            <a class="list-btn-style" data-toggle="modal"  href="/editAddress/<%= element._id %>">
                                <i class=""></i> EDIT
                              </a>
                              <% if(index>0){ %>
                              <a class=" list-btn-style" data-toggle="modal" data-target="#delete-address-modal" href="#">
                                <i class=""></i> DELETE
                              </a>
                              <% } %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %> <% }else{ %>
            <div class="row">
              <h3 class="text-center text-warning">
                You have no saved address! , Please add an Address.
              </h3>
            </div>

            <% }%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

